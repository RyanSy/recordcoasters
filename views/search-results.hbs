<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Record Coasters</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse ms-auto" id="navbarSupportedContent">
            <form class="ms-auto" action="/logout" class="d-flex" role="search">
                <button class="btn btn-outline-success" type="submit">Log Out</button>
            </form>
        </div>
    </div>
</nav>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
            {{#each results}}
            <div class="col">
                <div class="card shadow-sm">
                    <img src="{{this.cover_image}}" width="200" height="200">
                    {{this.title}}
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                    data-bs-target="#modal{{this.id}}">
                                    Add to Shopify
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade container" id="modal{{this.id}}" tabindex="-1" aria-labelledby="itemModalLabel"
                aria-hidden="true" role="dialog">
                <div class="modal-dialog modal-fullscreen container">
                    <div class="modal-content container">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="itemModalLabel">Add to Shopify</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/save" method="post">
                                <div class="input-group">
                                    <img class="mb-3" src="{{this.cover_image}}" alt="{{this.title}}" height="350" width="350">
                                    <input type="hidden" name="image" value="{{this.cover_image}}">
                                </div>
                                

                                <label for="">Item</label>
                                <div class="input-group form-outline w-50">
                                    <input type="text" class="form-control mb-3" name="title" value="{{this.title}} Drink Coaster">
                                </div>

                                <label for="">Quantity</label>
                                <div class="input-group mb-3 form-outline w-25">
                                    <input class="form-control" type="number" name="quantity" value="1">
                                </div>

                                <label for="">Price</label>
                                <div class="input-group mb-3 form-outline w-25">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" name="price">
                                </div>

                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</div>
<a href="/home">Return</a>
</div>